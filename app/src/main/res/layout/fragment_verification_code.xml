<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:background="@drawable/login_top_layout_bg">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_75sdp"
                android:src="@drawable/back_icon"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                android:elevation="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_4sdp"
                android:background="@drawable/login_logo_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/login_logo" /></RelativeLayout>
            <RelativeLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_120sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:background="@drawable/login_bottom_layout_white_bg">

                <LinearLayout
                    android:id="@+id/tvs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_110sdp">

                    <TextView
                        android:id="@+id/welcomeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verification Code"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/loginTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/we_have_sent_a_verification_code_to_your_mobile_number"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:layout_below="@id/welcomeTV"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/phoneTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+22 4564 5643"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/_4sdp"
                        android:layout_centerHorizontal="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:weightSum="4"
                        android:padding="@dimen/_6sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/_4sdp"
                            android:background="@drawable/white_round_circle"
                            android:elevation="@dimen/_4sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:text="0"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_round_circle"
                            android:elevation="@dimen/_4sdp"
                            android:layout_margin="@dimen/_4sdp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:layout_centerInParent="true"
                                android:text="0"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/_4sdp"
                            android:background="@drawable/white_round_circle"
                            android:elevation="@dimen/_4sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:layout_centerInParent="true"
                                android:text="0"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_round_circle"
                            android:elevation="@dimen/_4sdp"
                            android:layout_margin="@dimen/_4sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:layout_centerInParent="true"
                                android:text="0"/>
                        </RelativeLayout>

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orange_button_bg"
                        android:text="Verify"
                        android:padding="@dimen/_12sdp"
                        android:textAllCaps="false"
                        android:layout_marginVertical="@dimen/_25sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Didn't receive a code?"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/send_again"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/design_default_color_error"
                        android:fontFamily="@font/poppins"/>

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</layout>