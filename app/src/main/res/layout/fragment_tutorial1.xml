<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/_20sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tutorial1_image"
                android:scaleType="fitXY"
                android:id="@+id/image"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:text="Lorem Ipsum"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins"
                android:gravity="end"
                android:textSize="16sp"
                android:text="Lorem ipsum dolor sit amet, consecte\n elit. Lorem ipsum dolor sit amet,\n consecte turadi piscing elit" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="@dimen/_20sdp"
                android:paddingStart="@dimen/_10sdp">

                <View
                    android:id="@+id/line1"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/orange_line"/>
                <View
                    android:id="@+id/line2"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_toRightOf="@id/line1"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gray_line"/>
                <View
                    android:id="@+id/line3"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toRightOf="@id/line2"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gray_line"/>

                <RelativeLayout
                    android:id="@+id/nextRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/next_button_bg"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_12sdp"
                        android:src="@drawable/next_button_icon"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>



        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>