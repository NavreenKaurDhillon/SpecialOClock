<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:background="@drawable/login_top_layout_bg">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_75sdp"
                android:src="@drawable/back_icon"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_140sdp"
                android:elevation="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_4sdp"
                android:background="@drawable/login_logo_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/login_logo" /></RelativeLayout>
            <RelativeLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_120sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:background="@drawable/login_bottom_layout_white_bg">

                <LinearLayout
                    android:id="@+id/tvs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_100sdp">

                    <TextView
                        android:id="@+id/welcomeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/loginTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please enter your registered Email address."
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:layout_below="@id/welcomeTV"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Email"
                        android:padding="@dimen/_12sdp"
                        android:elevation="@dimen/_4sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/editext_white_bg"/>



                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orange_button_bg"
                        android:text="Submit"
                        android:padding="@dimen/_12sdp"
                        android:textAllCaps="false"
                        android:layout_marginVertical="@dimen/_25sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="17sp"/>


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</layout>