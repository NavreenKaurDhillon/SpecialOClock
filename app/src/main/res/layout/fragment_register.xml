<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-60dp"
            android:background="@drawable/login_top_layout_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_75sdp"/>

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_75sdp"
                android:src="@drawable/back_icon"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:tint="@color/white" />

              <RelativeLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_120sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:background="@drawable/login_bottom_layout_white_bg">

                <LinearLayout
                    android:id="@+id/tvs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/register_person_image">
                        <ImageView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/camera_icon"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Name"
                        android:padding="@dimen/_12sdp"
                        android:elevation="@dimen/_4sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/editext_white_bg"/>

 <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Email"
                        android:padding="@dimen/_12sdp"
                        android:elevation="@dimen/_4sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/editext_white_bg"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Mobile Number"
                        android:padding="@dimen/_12sdp"
                        android:textSize="14sp"
                        android:elevation="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/editext_white_bg"/>
 <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Password"
                        android:padding="@dimen/_12sdp"
                        android:textSize="14sp"
                        android:elevation="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/editext_white_bg"/>
 <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Confirm Password"
                        android:padding="@dimen/_12sdp"
                        android:textSize="14sp"
                        android:elevation="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/poppins"
                        android:background="@drawable/editext_white_bg"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:id="@+id/cB"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/by_creating_an_account_you_have_to_agree_with_our"
                            android:fontFamily="@font/poppins"
                            android:textSize="13sp"
                            android:gravity="start"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/cB"
                            android:layout_marginVertical="@dimen/_4sdp"
                            android:textColor="@color/black"
                            />

                    </RelativeLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orange_button_bg"
                        android:text="Sign In"
                        android:padding="@dimen/_12sdp"
                        android:textAllCaps="false"
                        android:layout_marginVertical="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="17sp"/>



                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_an_account"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:layout_below="@id/tvs"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</layout>